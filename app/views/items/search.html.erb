<h1>Search</h1>

<%= form_tag(do_search_items_path, method: "get") do %>
 <div class="form-group">
  <%= label_tag(:name, "Name:", class: "form-control") %>
  <%= text_field_tag(:name) %>
  <%= label_tag(:descript, "Description:", class: "form-control") %>
  <%= text_field_tag(:descript) %>
  <%= label_tag(:classification, "Classification:", class: "form-control") %>
  <%= text_field_tag(:classification) %>
  <%= select_tag(:matching, options_for_select([['matching', "match"], ['non matching', "not match"]]), class: "form-control") %>
  <%= submit_tag("Search") %>
  </div>
<% end %>